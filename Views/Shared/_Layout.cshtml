$('.myModal').on('shown.bs.modal', function (e) {
$('#blur-wrapper').removeClass('blur-out');
  $('#blur-wrapper').addClass('blur-in');

   // stops modal from being shown
});

$('.myModal').on('hidden.bs.modal', function (e) {
$('#blur-wrapper').removeClass('blur-in');
  $('#blur-wrapper').addClass('blur-out');
 // stops modal from being shown
})

var ht= $(".img-circle-link").height(),      
wd=$(".img-circle-link").width(),      
mult=1.1; //change to the no. of times you want to increase your image 
      //size.
$(".img-circle-link").on('mouseenter', function(){
$(this).animate({height: ht*mult,
                 width: wd*mult}, 200);
});
$(".img-circle-link").on('mouseleave', function(){
$(this).animate({height: ht,
                 width: wd}, 500);
})




	 </script>
